<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  	
  
 <mapper namespace="com.iu.s5.board.request.RequestDAO">
 	
 	<select id="getCount" resultType="Long" parameterType="Pager">
 		SELECT COUNT(num) FROM REQUEST
 	</select>
 	
 	<select id="getList" resultType="RequestDTO" parameterType="Pager">
 		SELECT * FROM
		(SELECT ROWNUM R ,RQ.* FROM (
			(SELECT * FROM REQUEST) RQ))
		WHERE R BETWEEN #{startNum} AND #{lastNum}
 	</select>
 
 	<insert id="setInsert" parameterType="RequestDTO">
 		insert into request 
		values (request_seq.nextval, , #{title}, #{writer}, #{contents}, sysdate, 0, 
		#{restName}, #{restLocation}, #{restPhone}, #{restCategory}, #{restTime}, #{restHoliday}, #{requestAccept});
 	</insert>
 </mapper>